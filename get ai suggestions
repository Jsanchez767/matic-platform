// GET /api/v1/tables/:id/ai/suggestions
// Get AI suggestions for field improvements
type AIFieldSuggestions struct {
    TableID     uuid.UUID           `json:"table_id"`
    Suggestions []FieldSuggestion   `json:"suggestions"`
}

// POST /api/v1/search/semantic
// Enhanced semantic search with field-aware results
type SemanticSearchRequest struct {
    Query       string              `json:"query"`
    Filters     SearchFilters       `json:"filters"`
    FieldWeights map[string]float64 `json:"field_weights,omitempty"` // Override weights
    ExcludePII  bool                `json:"exclude_pii"`              // Don't search PII fields
}

// GET /api/v1/tables/:id/schema/ai
// Get AI-friendly schema representation
type AITableSchema struct {
    TableID     uuid.UUID           `json:"table_id"`
    TableName   string              `json:"table_name"`
    EntityType  string              `json:"entity_type"`
    Fields      []AIFieldSchema     `json:"fields"`
    SampleRows  []map[string]any    `json:"sample_rows"` // 3 representative rows
}

type AIFieldSchema struct {
    ID            uuid.UUID `json:"id"`
    Name          string    `json:"name"`
    Label         string    `json:"label"`
    Type          string    `json:"type"`
    SemanticType  string    `json:"semantic_type"`
    Description   string    `json:"description"`      // From field config or AI-generated
    SampleValues  []string  `json:"sample_values"`
    ValueStats    ValueStats `json:"value_stats"`      // null_count, unique_count, etc.
    AIHints       AIHints   `json:"ai_hints"`          // From field_type_registry.ai_schema
}